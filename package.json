{
  "name": "eslint-config-expo-magic",
  "version": "1.2.0",
  "author": {
    "name": "João Paulo Costa Marra",
    "email": "joaopaulocmarra@gmail.com",
    "url": "https://github.com/JoaoPauloCMarra/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoaoPauloCMarra/eslint-config-expo-magic.git"
  },
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/JoaoPauloCMarra/eslint-config-expo-magic/issues"
  },
  "description": "A powerful, opinionated ESLint configuration for React Native and Expo projects with TypeScript support",
  "packageManager": "bun@1.2.21",
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "*.js",
    "utils/*.js"
  ],
  "homepage": "https://github.com/JoaoPauloCMarra/eslint-config-expo-magic#readme",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "react",
    "react-native",
    "expo",
    "typescript",
    "prettier",
    "jest",
    "mobile",
    "linting"
  ],
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "bun run check-pm && cd test-project && bun run validate || (echo '🚫 PUBLISH CANCELLED: Validation failed!' && exit 1)",
    "check-pm": "node check-pm.js",
    "install": "echo '⚠️  Please use bun instead of npm/yarn/pnpm for this project'",
    "ci": "bun install --frozen-lockfile",
    "dev": "bun run --if-present",
    "build": "bun run --if-present",
    "test": "bun run --if-present",
    "validate": "cd test-project && bun run validate"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-19-upgrade": "^1.7.0",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-testing-library": "^7.6.8",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=5.0.0"
  }
}
