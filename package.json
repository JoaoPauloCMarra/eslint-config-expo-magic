{
	"name": "eslint-config-expo-magic-monorepo",
	"private": true,
	"workspaces": [
		"packages/eslint-config-expo-magic"
	],
	"scripts": {
		"install": "echo '⚠️  Please use bun instead of npm/yarn/pnpm for this project'",
		"check-pm": "node packages/eslint-config-expo-magic/check-pm.js",
		"ci": "bun install --frozen-lockfile",
		"validate": "cd test-project && bun run validate",
		"cleanup:npm": "rimraf node_modules packages/**/node_modules test-project/node_modules"
	},
	"devDependencies": {
		"@types/react": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"eslint": "^9.38.0",
		"eslint-config-expo": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-19-upgrade": "^1.7.0",
		"eslint-plugin-react-compiler": "^19.1.0-rc.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-native": "^5.0.0",
		"eslint-plugin-testing-library": "^7.13.3",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^16.4.0",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2"
	},
	"engines": {
		"node": ">=16.0.0",
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.3.0"
}
