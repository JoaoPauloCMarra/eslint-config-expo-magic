{
	"name": "eslint-config-expo-magic-monorepo",
	"private": true,
	"workspaces": [
		"packages/eslint-config-expo-magic",
		"test-project"
	],
	"scripts": {
		"test": "bun test packages/eslint-config-expo-magic/index.test.ts",
		"check-pm": "node packages/eslint-config-expo-magic/check-pm.js",
		"ci": "bun install --frozen-lockfile",
		"validate": "cd test-project && bun run validate",
		"cleanup:npm": "rimraf node_modules packages/**/node_modules test-project/node_modules",
		"publish-package": "node scripts/publish-package.js"
	},
	"devDependencies": {
		"@types/react": "^19.2.3",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"bun-types": "latest",
		"eslint": "^9.39.2",
		"eslint-config-expo": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.12.1",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-19-upgrade": "^1.7.0",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-native": "^5.0.0",
		"eslint-plugin-testing-library": "^7.15.4",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^16.5.0",
		"jest": "^30.2.0",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.3.2"
}
