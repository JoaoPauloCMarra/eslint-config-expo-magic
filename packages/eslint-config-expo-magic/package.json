{
	"name": "eslint-config-expo-magic",
	"version": "2.1.0",
	"description": "A powerful, opinionated ESLint configuration for React Native and Expo projects with TypeScript support",
	"keywords": [
		"eslint",
		"eslintconfig",
		"eslint-config",
		"react",
		"react-native",
		"expo",
		"typescript",
		"prettier",
		"jest",
		"mobile",
		"linting"
	],
	"homepage": "https://github.com/JoaoPauloCMarra/eslint-config-expo-magic#readme",
	"bugs": {
		"url": "https://github.com/JoaoPauloCMarra/eslint-config-expo-magic/issues"
	},
	"license": "MIT",
	"author": {
		"name": "JoÃ£o Paulo Costa Marra",
		"email": "joaopaulocmarra@gmail.com",
		"url": "https://github.com/JoaoPauloCMarra/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoaoPauloCMarra/eslint-config-expo-magic.git"
	},
	"main": "index.js",
	"module": "index.mjs",
	"types": "index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"require": "./index.js",
			"import": "./index.mjs"
		},
		"./strict": {
			"types": "./strict.d.ts",
			"require": "./strict.js",
			"import": "./strict.mjs"
		},
		"./no-prettier": {
			"types": "./no-prettier.d.ts",
			"require": "./no-prettier.js",
			"import": "./no-prettier.mjs"
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"files": [
		"index.js",
		"index.mjs",
		"strict.js",
		"strict.mjs",
		"no-prettier.js",
		"no-prettier.mjs",
		"index.d.ts",
		"strict.d.ts",
		"no-prettier.d.ts",
		"README.md",
		"utils/*.js",
		".prettierrc.js"
	],
	"scripts": {
		"test": "bun test",
		"prepublishOnly": "bun run check-pm && bun run test && cd ../../test-project && bun run validate || (echo 'ğŸš« PUBLISH CANCELLED: Validation failed!' && exit 1)",
		"check-pm": "node check-pm.js",
		"pack:dry-run": "bun pm pack --dry-run",
		"publish:dry-run": "bun publish --dry-run",
		"ci": "bun install --frozen-lockfile",
		"dev": "bun run --if-present",
		"build": "bun run --if-present"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"@typescript-eslint/utils": "^8.55.0",
		"eslint-config-expo": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.14.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-native": "^5.0.0",
		"eslint-plugin-react-19-upgrade": "^1.7.0",
		"eslint-plugin-testing-library": "^7.15.4",
		"eslint-plugin-unused-imports": "^4.4.1",
		"@eslint/compat": "^2.0.2",
		"eslint": "^10.0.0",
		"prettier": "^3.8.1"
	},
	"peerDependencies": {
		"expo": "^54.0.33",
		"react": "^19.1.0",
		"react-test-renderer": "^19.1.0",
		"typescript": "^5.9.3"
	},
	"installPeers": false,
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.3.9",
	"devDependencies": {
		"@babel/preset-env": "^7.29.0",
		"babel-jest": "^30.2.0",
		"bun-types": "latest",
		"jest": "^30.2.0"
	}
}
